.Hand
  display: flex
  justify-content: center

  .Card
    transition: transform 250ms ease
    transform: rotateX(30deg)
    transform-origin: center bottom
    
    &-opponent .Card-back
      transform: rotateY(180deg)
      transform-origin: center top

    &:hover
      transition: transform 250ms ease
      transform: rotateX(0) translateY(-10px)
      transform-origin: center bottom
      box-shadow: none
      z-index: 999
