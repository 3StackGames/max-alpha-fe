setVisibleTextColor(background)
  if light(background)
    color: black
  else
    color: white

.ResourceOrb
  display: inline-block
  width: 25px
  height: 25px
  margin-right: 3px
  border: 1px solid
  border-radius: 100px
  font-size: 20px
  line-height: 25px
  text-align: center
  vertical-align: middle
  
  &--empty
    opacity: 0.2

  &-colorless
    background-color: $mana-colorless
    border-color: darken(@background-color, 30%)
    setVisibleTextColor(@background-color)
    

